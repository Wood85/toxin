mixin dropdownQuests
  .dropdown-quests
    .iqdropdown
      p.iqdropdown-selection
        .iqdropdown-menu
          .iqdropdown-menu-option(data-id="adults" data-defaultcount="0" data-mincount="0" data-maxcount="10")
            div
              p.iqdropdown-item взрослые
          .iqdropdown-menu-option(data-id="kids" data-defaultcount="0" data-mincount="0" data-maxcount="10")
            div
              p.iqdropdown-item дети
          .iqdropdown-menu-option(data-id="babies" data-defaultcount="0" data-mincount="0" data-maxcount="10")
            div
              p.iqdropdown-item младенцы
      img.iqdropdown-selection-chech(src="./assets/img/check-black.png" alt="dropdown trigger")