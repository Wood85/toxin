doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    link(rel='apple-touch-icon' sizes='180x180' href='assets/favicon/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='assets/favicon/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='assets/favicon/favicon-16x16.png')
    link(rel='manifest' href='assets/favicon/site.webmanifest')
    link(rel='mask-icon' href='assets/favicon/safari-pinned-tab.svg' color='#5bbad5')
    meta(name='msapplication-TileColor' content='#2b5797')
    meta(name='theme-color' content='#ffffff')
    title Toxin
  body
    include  ../components/colors-and-type/color-block/color-block
    include  ../components/colors-and-type/type-item/type-item

    .colors-and-type
      .colors
        +colorBlock("Dark Shade 100%", "#1F2041")(class="dark-shade-100")
        +colorBlock("Dark Shade 75%", "#1F2041")(class="dark-shade-75")
        +colorBlock("Dark Shade 50%", "#1F2041")(class="dark-shade-50")
        +colorBlock("Dark Shade 25%", "#1F2041")(class="dark-shade-25")
        +colorBlock("Dark Shade 5%", "#1F2041")(class="dark-shade-5")
        +colorBlock("Purple", "#BC9CFF")(class="purple")
        +colorBlock("Green", "#6FCF97")(class="green")
      ul.type
        li.type__row
          +typeItem("H1", "This one is the sub-section or widget title")(class="title-h1")
        li.type__row
          +typeItem("H2", "Next one is the item title inside widgets")(class="title-h2")
        li.type__row
          +typeItem("H3", "THIS IS A LABEL OR CTA TEXT")(class="title-h3")
        li.type__row
          +typeItem("Body", "This is the body text which is used for most of the design, like paragraphs, lists, etc.")(class="text-body")


