    .radio-buttons__title.title-form Radio Buttons
    .radio-buttons__buttons
      +radioButton('Мужчина', 'gender', 'male')
      +radioButton('Женщина', 'gender', 'female')
  .toggle__wrap
    .toggle__title.title-form Toggle
    .toggle__item
      +toggleButton('Получать спецпредложения')(class='toggle-button')
